        android:text="Button" />-->

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_point_pick"
        android:layout_alignBottom="@+id/btn_point_pick"
        android:layout_alignLeft="@+id/tv_stime"
        android:layout_alignRight="@+id/tv_stime"
        android:text="@string/addtimepg_tv_point" />

    <Button
        android:id="@+id/btn_Timesave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_stime"
        android:layout_below="@+id/btn_point_pick"
        android:text="@string/add_btn_save"
        android:textColor="#000" />

    <Button
        android:id="@+id/btn_time_pick"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/et_stime"
        android:layout_marginRight="14dp"
        android:text="@string/addtimepg_btn_time" />

    <Button
        android:id="@+id/btn_point_pick"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_time_pick"
        android:layout_below="@+id/et_stime"
        android:text="@string/addtimepg_btn_point" />

</RelativeLayout>
